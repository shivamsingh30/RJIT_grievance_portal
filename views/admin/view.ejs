<%-include('./layouts/header.ejs')%>
<%-include('./layouts/sidebar.ejs')%>



    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Main content -->
      <div class="content">
        <h1>View Complaint</h1>
        <!-- /.card -->

        <div class="card">
          <div class="card-header">
            <h3 class="card-title"></h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
              <thead>
                <tr>

                  <th>S.NO</th>
                  <th>Name</th>
                  <th>complaint Type</th>
                  <th>semester</th>
                  <th>Subject</th>
                  <th>Complaint Detail</th>
                  <th>image</th>
                  <th>Status</th>
                  <th>Comment</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                  <tr>
                    <td><%= i++ %></td> 
                    <td><%= c.name %></td>  
                    <td><%= c.ctype %></td>
                    <td><%= c.semester %></td>
                    <td><%= c.subject %></td>
                    <td><%= c.cdetail %></td>
                    <td>
                        <img src="<%= c.image.url %>" alt="" style="width: 50px; border-radius: 2px;">
                      </td>
                    <td><%= c.status %></td>
                    <td>
                      <form action="/updatestatus/<%= c._id %>" method="post">
                        <textarea name="comment" id="" ></textarea>
                      
                    </td>
                    <td>
                      <button type="submit" name="status" value="solved" class="btn btn-info" >Solved</button>
                      <button type="submit" name="status" class="btn btn-danger" value="rejected">Rejected</button>
                    </form>
                    </td>
                  </tr>
                </tbody>
              <tfoot>
                <tr>
                  <th>S.NO</th>
                  <th>Name</th>
                  <th>complaint Type</th>
                  <th>semester</th>
                  <th>Subject</th>
                  <th>Complaint Detail</th>
                  <th>image</th>
                  <th>Status</th>
                  <th>Comment</th>
                    <th></th>
                </tr>
              </tfoot>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%-include('./layouts/footer.ejs')%>