<%-include('../layouts/header.ejs')%>
<%-include('../layouts/sidebar.ejs')%>



    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Main content -->
      <div class="content">
        <h1>Edit Student</h1>
        <!-- /.card -->

        <div class="card">
          <div class="card-header">
            <h3 class="card-title"></h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <form action="/admin/studentupdate/<%= d._id %>" method="post" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="">Name</label>
                  <input type="text" name="name" value="<%= d.name %>" class="form-control">
                </div>
                <div class="form-group">
                  <label for="">Email</label>
                  <input type="text" name="email" value="<%= d.email %>" class="form-control">
                </div>
                <div class="form-group">
                  <label for="">Password</label>
                  <input readonly type="password" name="password" value="<%= d.password %>" class="form-control">
                </div>
                <div class="form-group">
                  <label for="">Image</label>
                  <input type="file" name="image" class="form-control">
                  <br>
                  <img src="<%= d.image.url %>" alt="" style="width: 50px; border-radius: 2px;" >
                </div>
                <button class="btn btn-success" type="submit">Submit</button>
              </form>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->

        
      </div>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%-include('../layouts/footer.ejs')%>