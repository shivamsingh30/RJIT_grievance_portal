<%-include('../admin/layouts/header.ejs')%>
<%-include('../admin/layouts/sidebar.ejs')%>



    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Main content -->
      <div class="content">
        <h1>Edit Complaint</h1>
        <!-- /.card -->

        <div class="card">
          <div class="card-header">
            <h3 class="card-title"></h3>
          
          <!-- /.card-header -->
          <div class="card-body">
            <form action="/complaintupdate/<%= c._id %>" method="post" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="">Complaint Type</label>
                  <input type="text" name="ctype" value="<%= c.ctype %>" class="form-control">
                </div>
                <div class="form-group">
                  <label for="">Semester</label>
                  <input type="text" name="semester" value="<%= c.semester %>" class="form-control">
                  <!-- <select name="semester" id="" value="<%= c.semester %>" class="form-control">
                      <option>Select Semester</option>
                      <option>1st Semester</option>
                      <option>2nd Semester</option>
                      <option>3rd Semester</option>
                      <option>4th Semester</option>
                      <option>5th Semester</option>
                      <option>6th Semester</option>
                      <option>7th Semester</option>
                      <option>8th Semester</option>
                  </select> -->
                </div>
                <div class="form-group">
                  <label for="">Subject/Title</label>
                  <input type="text" name="subject" value="<%= c.subject %>" class="form-control">
                </div>
                <div class="form-group">
                  <label for="">Complaint Details</label>
                  <textarea name="cdetail" id="" class="form-control"><%= c.cdetail %></textarea>
                </div>
                <div class="form-group">
                  <label for="">Attach Supporting Files</label>
                  <input type="file" name="image"  class="form-control">
                  <br>
                  <img src="<%= c.image.url %>" alt="" style="width: 50px; height: 30px; border-radius: 2px;">
                </div>
                <button class="btn btn-success" type="submit">Submit</button>
              </form>
          </div>
        </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->

      </div>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%-include('../admin/layouts/footer.ejs')%>